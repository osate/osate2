<project name="build Eclipse Help" default="build-help">

  <description>
    Used to transform DocBook XML to Eclipse help output
  </description>

  <!-- Define base properties -->
  <property name="docs_output.dir" value="docs-gen" />

	<!-- - target: usage -->
  <target name="usage" description="Prints help">
<echo message="Use -projecthelp to get a list of the available targets." />
  </target>

  <!-- - target: clean -->
  <target name="clean" description="Cleans up generated files.">
  <delete dir="${docs_output.dir}" />
  	<!-- Currently disabled.  Enable when building api docs.
  	<delete dir="api" />
  	-->
  </target>

  <target name="build-help" depends="clean, build_docs_eclipse, build_api_docs">
  </target>
		
	<target name="build_docs_eclipse" description="Build Eclipse Help Documentation">
		<mkdir dir="${docs_output.dir}" />

		<!-- User Guide -->
		<exec executable="pandoc" dir="./docs/">
			<arg value="user_guide.md"/>
			<arg value="--toc"/>
			<arg value="--number-sections"/>
	    	<arg value="-s"/>
			<arg value="--filter"/>
			<arg value="pandoc-crossref"/>
	   		<arg value="-f"/>
	   	    <arg value="markdown"/>
	   		<arg value="-t"/>
	   		<arg value="html5"/>
			<arg value="--css=../css/pandoc.css"/>
	   		<arg value="-o"/>
			<arg value="../docs-gen/user_guide.html"/>
		</exec>
		
		<exec executable="pandoc" dir="./docs/">
			<env key="HTML_FILEPATH" value="docs-gen/user_guide.html"/>
			<arg value="user_guide.md"/>
	    	<arg value="-t"/>
	   		<arg value="../create_toc.lua"/>
	   		<arg value="-o"/>
			<arg value="../docs-gen/user_guide_toc.xml"/>
		</exec>
		
		<!-- Developer Guide -->
		<exec executable="pandoc" dir="./docs/">
			<arg value="dev_guide.md"/>
			<arg value="--toc"/>
			<arg value="--number-sections"/>
	    	<arg value="-s"/>
			<arg value="--filter"/>
			<arg value="pandoc-crossref"/>
	   		<arg value="-f"/>
	   	    <arg value="markdown"/>
	   		<arg value="-t"/>
	   		<arg value="html5"/>
			<arg value="--css=../css/pandoc.css"/>
	   		<arg value="-o"/>
			<arg value="../docs-gen/dev_guide.html"/>
		</exec>
		
		<exec executable="pandoc" dir="./docs/">
			<env key="HTML_FILEPATH" value="docs-gen/dev_guide.html"/>
			<arg value="dev_guide.md"/>
	    	<arg value="-t"/>
	   		<arg value="../create_toc.lua"/>
	   		<arg value="-o"/>
			<arg value="../docs-gen/dev_guide_toc.xml"/>
		</exec>
	</target>
	
    <target name="build_api_docs">
        <javadoc access="public" additionalparam="-notimestamp -Xdoclint:none -tag 'noimplement:a:No Implement:' -tag 'noextend:a:No Extend:' -tag 'noreference:a:No Reference:' -tag 'noinstantiate:a:No Instantiate:' -tag 'nooverride:a:No Override:'" author="true"
        	destdir="api" 
        	doctitle="OSATE Graphical Editor API Reference" 
        	nodeprecated="false" 
        	nodeprecatedlist="false" 
        	noindex="false" 
        	nonavbar="false" 
        	notree="false" 
        	packagenames="org.osate.ge,org.osate.ge.aadl2,org.osate.ge.aadl2.ui,org.osate.ge.businessobjecthandling,org.osate.ge.graphics,org.osate.ge.operations,org.osate.ge.palette,org.osate.ge.query,org.osate.ge.referencehandling,org.osate.ge.services,org.osate.ge.ui" 
        	source="1.8"         	 
        	sourcepath="..\org.osate.ge\src;..\org.osate.ge.diagram\src" 
        	splitindex="true" 
        	use="true" 
        	version="true"                
        />
    </target>
</project> 