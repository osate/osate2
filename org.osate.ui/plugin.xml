   <extension
         id="org.osate.views"
         point="org.eclipse.ui.views">
      <category
      		id="aadl.view_category"
      		name="%aadl_view_category.label"/>
      <view
            category="aadl.view_category"
            class="org.osate.ui.views.LoggerView"
            icon="icons/aadl.gif"
            id="org.osate.ui.logger_view"
            name="%osate_logger_view.label">
      </view>
   </extension>
   
