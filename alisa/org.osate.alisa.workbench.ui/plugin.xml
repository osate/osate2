      <category
            id="org.osate.alisa.assure"
            name="Alisa">
      </category>
       <view
             category="org.osate.alisa.assure"
             class="org.osate.alisa.workbench.ui.AlisaExecutableExtensionFactory:org.osate.alisa.workbench.ui.views.AlisaView"
             icon="icons/alisahead.png"
