			<artifactId>org.osate.analysis.model</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.xtext.aadl2.errormodel.feature</artifactId>
			<version>8.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.ba.feature</artifactId>
			<version>5.1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.utils.feature</artifactId>
			<version>2.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.alisa.workbench.sdk</artifactId>
			<version>6.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.ge.feature</artifactId>
			<version>4.1.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.ge.ba.feature</artifactId>
			<version>1.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.ge.errormodel.feature</artifactId>
			<version>4.0.1-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>javadoc</id>
			<activation>
				<property>
					<name>javadoc</name>
					<value>true</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.eclipse.tycho.extras</groupId>
						<artifactId>tycho-document-bundle-plugin</artifactId>
						<version>${tycho-extras.version}</version>
						<executions>
							<execution>
								<id>eclipse-javadoc</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>javadoc</goal>
								</goals>
								<configuration>
									<outputDirectory>${project.basedir}/api-docs/javadoc</outputDirectory>
									<tocFile>${project.basedir}/javadoccontents.xml</tocFile>
									<tocOptions>
										<mainLabel>OSATE API Reference</mainLabel>
									</tocOptions>
									<javadocOptions>
										<!--enable in case you need a proxy for web access <jvmOptions> 
											<jvmOption>-Dhttp.proxySet=true</jvmOption> <jvmOption>-Dhttp.proxyHost=proxy.example.com</jvmOption> 
											<jvmOption>-Dhttp.proxyPort=81</jvmOption> <jvmOption>-DhttpnonProxyHosts=*.example.com</jvmOption> 
											</jvmOptions> -->
										<excludes>
											<exclude>alisa_consistency</exclude>
											<exclude>antlr*</exclude>
											<exclude>org.antlr*</exclude>
											<exclude>com.*</exclude>
											<exclude>org.osate.xtext.aadl2.ide.contentassist.antlr*</exclude>
										</excludes>
										<additionalArguments>
											<additionalArgument>
												--ignore-source-errors
											</additionalArgument>
											<additionalArgument>
												-link
												https://docs.oracle.com/en/java/javase/11/docs/api/
											</additionalArgument>
											<additionalArgument>
												-link
												https://help.eclipse.org/2021-03/topic/org.eclipse.platform.doc.isv/reference/api/
											</additionalArgument>
											<additionalArgument>
												-link
												https://javadoc.io/doc/org.eclipse.emf/org.eclipse.emf.common/2.22.0/
											</additionalArgument>
											<additionalArgument>
												-link
												https://javadoc.io/doc/org.eclipse.emf/org.eclipse.emf.ecore/2.24.0/
											</additionalArgument>
											<additionalArgument>
												-link
												https://javadoc.io/doc/org.eclipse.xtext/org.eclipse.xtext/2.25.0/
											</additionalArgument>
											<additionalArgument>
												-link
												https://javadoc.io/doc/org.openjfx/javafx-base/16/
											</additionalArgument>
											<additionalArgument>-public</additionalArgument>
										</additionalArguments>
									</javadocOptions>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>com.ruleoftech</groupId>
				<artifactId>markdown-page-generator-plugin</artifactId>
				<version>2.1.0</version>
				<configuration>
					<inputDirectory>${project.basedir}/help/markdown/</inputDirectory>
					<outputDirectory>${project.basedir}/help/html/</outputDirectory>
					<copyDirectories>images,css</copyDirectories>
					<attributes>
						<attribute>BlockQuote|style="font-size:90%"</attribute>
					</attributes>
					<pegdownExtensions>EXTANCHORLINKS,TOC</pegdownExtensions>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
