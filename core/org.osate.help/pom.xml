	<groupId>org.osate</groupId>
	<artifactId>org.osate.help</artifactId>
	<version>2.11.0-SNAPSHOT</version>
	<packaging>eclipse-plugin</packaging>

	<!-- Generate javadoc for maven projects listed as dependencies -->
	<dependencies>
