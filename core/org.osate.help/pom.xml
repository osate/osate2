		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
			<artifactId>org.osate.ui</artifactId>
			<version>6.1.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.osate</groupId>
