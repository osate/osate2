<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="ModelStatisticsObjectMarker"
         name="Model Statistics Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>

   
   <extension
         id="ConnectionBindingConsistencyObjectMarker"
         name="Connection Binding Consistency Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         id="A429ConnectionConsistencyObjectMarker"
         name="A429 Connection Consistency Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         id="PortConnectionConsistencyObjectMarker"
         name="Port Connection Consistency Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         id="WeightTotalObjectMarker"
         name="Weight Total Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         id="CheckBindingConstraintsObjectMarker"
         name="Check Binding Constraints Marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.osate.aadl2.modelsupport.AadlObjectMarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.help.toc">
      <toc
            file="help/toc_check_binding_constraints.xml"
            primary="true">
      </toc>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.osate.analysis.architecture.category"
            name="%actionSet.label">
      </category>
      <command
            categoryId="org.osate.analysis.architecture.category"
            id="org.osate.analysis.architecture.checkConnectionBindingConsistency"
            name="%DoConnectionBindingConsistency.label">
      </command>
      <command
            categoryId="org.osate.analysis.architecture.category"
            id="org.osate.analysis.architecture.portConnectionConsistency"
            name="%PortConnectionConsistency.label">
      </command>
      <command
            categoryId="org.osate.analysis.architecture.category"
            id="org.osate.analysis.architecture.checkA429PortConnectionConsistency"
            name="%A429ConnectionConsistency.label">
      </command>
      <command
            categoryId="org.osate.analysis.architecture.category"
            id="org.osate.analysis.architecture.doModelStatistics"
            name="%DoModelStatistics.label">
      </command>
      <command
            categoryId="org.osate.analysis.architecture.category"
            id="org.osate.analysis.architecture.propertyTotals"
            name="%CheckPropertyTotals.label">
      </command>
      <command
            categoryId="org.osate.analysis.architecture.category"
            id="org.osate.analysis.architecture.checkBindingConstraints"
            name="Check binding constraints">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.analysis.architecture.handlers.CheckConnectionBindingConsistency"
            commandId="org.osate.analysis.architecture.checkConnectionBindingConsistency">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.architecture.handlers.DoPortConnectionConsistency"
            commandId="org.osate.analysis.architecture.portConnectionConsistency">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.architecture.handlers.CheckA429PortConnectionConsistency"
            commandId="org.osate.analysis.architecture.checkA429PortConnectionConsistency">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.architecture.handlers.DoModelStatistics"
            commandId="org.osate.analysis.architecture.doModelStatistics">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     operator="and"
                     ifEmpty="false">
                  <or>
                     <instanceof
                           value="org.osate.aadl2.instance.SystemInstance">
                     </instanceof>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                        <or>
                           <test
                                 property="org.eclipse.core.resources.contentTypeId"
                                 value="org.osate.core.instanceModelFile">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="aadl">
                           </test>
                        </or>
                     </adapt>
                  </or>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.architecture.handlers.DoPropertyTotals"
            commandId="org.osate.analysis.architecture.propertyTotals">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.architecture.handlers.CheckBindingConstraints"
            commandId="org.osate.analysis.architecture.checkBindingConstraints">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <instanceof
                              value="org.osate.aadl2.instance.SystemInstance">
                        </instanceof>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.osate.analysis.architecture.checkConnectionBindingConsistency"
            icon="icons/ConnBinding.gif">
      </image>
      <image
            commandId="org.osate.analysis.architecture.portConnectionConsistency"
            icon="icons/portConnCon.gif">
      </image>
      <image
            commandId="org.osate.analysis.architecture.checkA429PortConnectionConsistency"
            icon="icons/a429ConnCon.gif">
      </image>
      <image
            commandId="org.osate.analysis.architecture.doModelStatistics"
            icon="icons/stats.gif"
            disabledIcon="icons/noStats.gif">
      </image>
      <image
            commandId="org.osate.analysis.architecture.propertyTotals"
            icon="icons/checkPropertyTotals.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="menu.analyses"
               label="%menu.analyses.label">
            <menu
                  id="menu.arch"
                  label="%menu.arch.label">
               <command
                     commandId="org.osate.analysis.architecture.portConnectionConsistency">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.checkA429PortConnectionConsistency">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.doModelStatistics">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.propertyTotals">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
            <menu
                  id="menu.semantic"
                  label="%menu.semantic.label">
               <command
                     commandId="org.osate.analysis.architecture.checkConnectionBindingConsistency">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.checkBindingConstraints">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.osate.ui.perspective.AadlPerspective">
                        </equals>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="arch.toolbar">
            <command
                  commandId="org.osate.analysis.architecture.checkConnectionBindingConsistency"
                  tooltip="%DoConnectionBindingConsistency.toolTip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.architecture.portConnectionConsistency"
                  tooltip="%PortConnectionConsistency.toolTip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.architecture.checkA429PortConnectionConsistency"
                  tooltip="%A429ConnectionConsistency.toolTip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.architecture.doModelStatistics"
                  tooltip="%DoModelStatistics.toolTip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.osate.analysis.architecture.propertyTotals"
                  tooltip="%CheckPropertyTotals.toolTip">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeWorkbenchWindow.activePerspective">
                     <equals
                           value="org.osate.ui.perspective.AadlPerspective">
                     </equals>
                  </with>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.osate.ui.popupMenu.Analyses"
               label="%popupMenu.analyses.label">
            <menu
                  id="org.osate.analysis.architecture.popupMenu.Semantic"
                  label="%popupMenu.Semantic.label">
               <command
                     commandId="org.osate.analysis.architecture.checkConnectionBindingConsistency">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="selection">
                        <iterate
                              operator="and"
                              ifEmpty="false">
                           <or>
                              <instanceof
                                    value="org.osate.aadl2.instance.SystemInstance">
                              </instanceof>
                              <adapt
                                    type="org.eclipse.core.resources.IFile">
                                 <test
                                       property="org.eclipse.core.resources.contentTypeId"
                                       value="org.osate.core.instanceModelFile">
                                 </test>
                              </adapt>
                           </or>
                        </iterate>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
            <menu
                  id="org.osate.analysis.architecture.popupMenu.Arch"
                  label="%popupMenu.Arch.label">
               <command
                     commandId="org.osate.analysis.architecture.portConnectionConsistency">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="selection">
                        <iterate
                              operator="and"
                              ifEmpty="false">
                           <or>
                              <instanceof
                                    value="org.osate.aadl2.instance.SystemInstance">
                              </instanceof>
                              <adapt
                                    type="org.eclipse.core.resources.IFile">
                                 <test
                                       property="org.eclipse.core.resources.contentTypeId"
                                       value="org.osate.core.instanceModelFile">
                                 </test>
                              </adapt>
                           </or>
                        </iterate>
                     </with>
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.checkA429PortConnectionConsistency">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="selection">
                        <iterate
                              operator="and"
                              ifEmpty="false">
                           <or>
                              <instanceof
                                    value="org.osate.aadl2.instance.SystemInstance">
                              </instanceof>
                              <adapt
                                    type="org.eclipse.core.resources.IFile">
                                 <test
                                       property="org.eclipse.core.resources.contentTypeId"
                                       value="org.osate.core.instanceModelFile">
                                 </test>
                              </adapt>
                           </or>
                        </iterate>
                     </with>
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.doModelStatistics">
                  <visibleWhen
                        checkEnabled="true">
                  </visibleWhen>
               </command>
               <command
                     commandId="org.osate.analysis.architecture.propertyTotals">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="selection">
                        <iterate
                              operator="and"
                              ifEmpty="false">
                           <or>
                              <instanceof
                                    value="org.osate.aadl2.instance.SystemInstance">
                              </instanceof>
                              <adapt
                                    type="org.eclipse.core.resources.IFile">
                                 <test
                                       property="org.eclipse.core.resources.contentTypeId"
                                       value="org.osate.core.instanceModelFile">
                                 </test>
                              </adapt>
                           </or>
                        </iterate>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
         </menu>
      </menuContribution>
   </extension>
</plugin>
