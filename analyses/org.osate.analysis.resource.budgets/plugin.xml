<?eclipse version="3.0"?>
<plugin>
   <extension
         id="NotBoundResourceAnalysisMarker"
         name="Not Bound Resource Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>

   <extension
         id="BoundResourceAnalysisMarker"
         name="Bound Resource Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>


   <extension
         id="BusLoadAnalysisMarker"
         name="Bus Load Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>

   <extension
         id="PowerAnalysisMarker"
         name="Power Analysis Marker"
         point="org.eclipse.core.resources.markers">
      <super type="org.osate.aadl2.modelsupport.AadlObjectMarker"/>
      <persistent value="true"/>
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.osate.analysis.resource.budgets.category"
            name="%actionSet.label">
      </category>
      <command
            categoryId="org.osate.analysis.resource.budgets.category"
            id="org.osate.analysis.resource.budgets.notBoundResourceAnalysis"
            name="Analyze Resource Budgets (Not Bound)">
      </command>
      <command
            categoryId="org.osate.analysis.resource.budgets.category"
            id="org.osate.analysis.resource.budgets.boundResourceAnalysis"
            name="Analyze Resource Allocations (Bound)">
      </command>
      <command
            categoryId="org.osate.analysis.resource.budgets.category"
            id="org.osate.analysis.resource.budgets.powerAnalysis"
            name="Analyze Power Requirements">
      </command>
      <command
            categoryId="org.osate.analysis.resource.budgets.category"
            id="org.osate.analysis.resource.budgets.BusLoadAnalysis"
            name="Analyze Bus Load">
          <visibleWhen>
             <with
                   variable="selection">
                <and>
                   <count
                         value="+">
                   </count>
                   <iterate
                         ifEmpty="false"
                         operator="or">
                      <or>
                         <!-- Working set -->
                            <instanceof value="org.eclipse.ui.IWorkingSet" />
							 
                         <!-- open AADL project or any closed project -->
                         <and>
                            <instanceof value="org.eclipse.core.resources.IProject" />
                            <or>
                                <test
                                    property="org.eclipse.core.resources.projectNature"
   	                                value="org.osate.core.aadlnature" />
                                <not>
                                    <test property="org.eclipse.core.resources.open" />
   	                            </not>
                            </or>
                         </and>
	                         
                         <!-- folder in an AADL project -->
                         <and>
                            <instanceof value="org.eclipse.core.resources.IFolder" />
                            <test
                                property="org.eclipse.core.resources.projectNature"
                                value="org.osate.core.aadlnature" />
                         </and>
                         
                         <!-- Instance model file -->
                         <adapt
                                type="org.eclipse.core.resources.IFile">
                            <test
                                  property="org.eclipse.core.resources.contentTypeId"
                                  value="org.osate.core.instanceModelFile">
                            </test>
                         </adapt>
                      </or>
                   </iterate>
                </and>
             </with>
          </visibleWhen>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.osate.analysis.resource.budgets.handlers.NotBoundResourceAnalysisHandler"
            commandId="org.osate.analysis.resource.budgets.notBoundResourceAnalysis">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.osate.aadl2.modelsupport.EObjectURIWrapper">
                              <test
                                    property="org.osate.aadl2.modelsupport.wrapperSuperType"
                                    value="SystemInstance"
                                    forcePluginActivation="true">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.resource.budgets.handlers.BoundResourceAnalysisHandler"
            commandId="org.osate.analysis.resource.budgets.boundResourceAnalysis">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.osate.aadl2.modelsupport.EObjectURIWrapper">
                              <test
                                    property="org.osate.aadl2.modelsupport.wrapperSuperType"
                                    value="SystemInstance"
                                    forcePluginActivation="true">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.resource.budgets.handlers.PowerAnalysisHandler"
            commandId="org.osate.analysis.resource.budgets.powerAnalysis">
         <enabledWhen>
            <or>
               <reference
                     definitionId="org.osate.core.isInstanceFileSelected">
               </reference>
               <with
                     variable="selection">
                  <and>
                     <count
                           value="1">
                     </count>
                     <iterate>
                        <or>
                           <instanceof
                                 value="org.osate.aadl2.instance.SystemInstance">
                           </instanceof>
                           <adapt
                                 type="org.osate.aadl2.modelsupport.EObjectURIWrapper">
                              <test
                                    property="org.osate.aadl2.modelsupport.wrapperSuperType"
                                    value="SystemInstance"
                                    forcePluginActivation="true">
                              </test>
                           </adapt>
                        </or>
                     </iterate>
                  </and>
               </with>
            </or>
         </enabledWhen>
      </handler>
      <handler
            class="org.osate.analysis.resource.budgets.handlers.NewBusLoadAnalysisHandler"
            commandId="org.osate.analysis.resource.budgets.BusLoadAnalysis">
          <enabledWhen>
             <with
                   variable="selection">
                <and>
                   <count
                         value="+">
                   </count>
                   <iterate
                         ifEmpty="false"
                         operator="and">
                      <or>
                         <!-- Working Set -->
                         <instanceof value="org.eclipse.ui.IWorkingSet" />
                         
                         <!-- open AADL project -->
                         <and>
                            <instanceof value="org.eclipse.core.resources.IProject" />
                            <or>
                                <test
                                    property="org.eclipse.core.resources.projectNature"
	                                value="org.osate.core.aadlnature" />
                                 <not>
                                     <test property="org.eclipse.core.resources.open" />
	                             </not>
                            </or>
                         </and>
                         
                         <!-- folder in an AADL project -->
                         <and>
                            <instanceof value="org.eclipse.core.resources.IFolder" />
                            <test
                                property="org.eclipse.core.resources.projectNature"
                                value="org.osate.core.aadlnature" />
                         </and>
                         
                         <!-- Instance model file -->
                         <adapt
                                type="org.eclipse.core.resources.IFile">
                            <test
                                  property="org.eclipse.core.resources.contentTypeId"
                                  value="org.osate.core.instanceModelFile">
                            </test>
                         </adapt>
                      </or>
                   </iterate>
                </and>
             </with>
          </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="org.osate.analysis.resource.budgets.notBoundResourceAnalysis"
            icon="icons/budget.gif">
      </image>
      <image
            commandId="org.osate.analysis.resource.budgets.boundResourceAnalysis"
            icon="icons/budgetB.gif">
      </image>
      <image
            commandId="org.osate.analysis.resource.budgets.powerAnalysis"
            icon="icons/power.gif">
      </image>
      <image
            commandId="org.osate.analysis.resource.budgets.BusLoadAnalysis"
            icon="icons/switchB.gif">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.osate.ui.budgetMenu?after=core">
         <command
               commandId="org.osate.analysis.resource.budgets.BusLoadAnalysis">
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.powerAnalysis">
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.boundResourceAnalysis">
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.notBoundResourceAnalysis">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.osate.ui.budgetToolbar?after=core">
         <command
               commandId="org.osate.analysis.resource.budgets.BusLoadAnalysis"
               tooltip="Analyze bus load for bound connections">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.powerAnalysis"
               tooltip="Analyze power requirements">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.boundResourceAnalysis"
               tooltip="Analyze resource allocations for processors and memories">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.notBoundResourceAnalysis"
               tooltip="Analyze resource budget totals for processors and memories">
            <!--
               Remove visibleWhen on the command when this bug is fixed:
               https://bugs.eclipse.org/bugs/show_bug.cgi?id=201589
            -->
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeWorkbenchWindow.activePerspective">
                  <equals
                        value="org.osate.ui.perspective.AadlPerspective">
                  </equals>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.osate.ui.budgetNavigatorPopup?after=core">
         <command
               commandId="org.osate.analysis.resource.budgets.BusLoadAnalysis">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.powerAnalysis">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.boundResourceAnalysis">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
         <command
               commandId="org.osate.analysis.resource.budgets.notBoundResourceAnalysis">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         id="toc_busload"
         name="Bus Load Analysis Help Table of Contents"
         point="org.eclipse.help.toc">
      <toc
            file="help/toc_busload.xml"
            primary="true">
      </toc>
   </extension>
</plugin>
